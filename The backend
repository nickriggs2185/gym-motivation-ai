export default async function handler(req, res) {
  try {
    const mode = req.query.mode || "standard";

    const prompts = {
      standard: `
You are an elite gym motivation coach.
Deliver one short, serious motivational message.
Under 30 words. No clich√©s. No emojis.
Make skipping feel unacceptable.
`,
      savage: `
You are an aggressive accountability coach.
Tough-love discipline. No insults.
Under 25 words.
`,
      comeback: `
User missed workouts.
Reframe failure as fuel.
Focused, calm tone. Under 30 words.
`
    };

    const response = await fetch("https://api.openai.com/v1/chat/completions", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        "Authorization": `Bearer ${process.env.OPENAI_API_KEY}`
      },
      body: JSON.stringify({
        model: "gpt-4.1-mini",
        messages: [
          { role: "system", content: prompts[mode] || prompts.standard }
        ],
        temperature: 0.9,
        max_tokens: 60
      })
    });

    const data = await response.json();

    res.status(200).json({
      message: data.choices[0].message.content.trim()
    });

  } catch {
    res.status(500).json({ error: "AI failed" });
  }
}
